{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "bankId": {
            "type": "string",
            "pattern": "^(100|[1-4][0-9]{2}|500)$"
        },
        "mobileNo": {
            "type": "string",
            "pattern": "^[0-9]{10}$"
        },
        "fitype": {
            "type": "string",
            "enum": ["DEPOSIT", "TERM_DEPOSIT", "RECURRING_DEPOSIT"]
        }
    },
    "required": ["bankId", "mobileNo", "fitype"],
    "additionalProperties": false
}
