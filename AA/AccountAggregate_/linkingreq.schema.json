{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "bankID": {
      "type": "string",
      "pattern": "^[0-9]{3}$"
    },
    "mobileNumber": {
      "type": "string",
      "pattern": "^[0-9]{10}$"
    },
    "accountNumber": {
      "type": "string",
      "pattern": "^[0-9]{12}$"
    }
  }, 
  "required": ["bankID", "mobileNumber", "accountNumber"],
  "additionalProperties": false
}
